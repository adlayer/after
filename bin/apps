#!/usr/bin/env node
var config = require("../config")
var program = require('commander');
var couchapp = require('couchapp');

var protocol = 'http://';
var auth = [config.login, config.password].join(':');
var host = [config.host, config.port].join(':');

var url = protocol + auth + '@' + host + '/' + config.db;


var dir = process.cwd();
program
  .command('install <path>')
  .description('install the couchapp')
  .action(function(path){
	var appModule = require(dir + '/' +path);
	couchapp.createApp(appModule, url , function(app){
		app.push();
	});

  });
module.exports = program;